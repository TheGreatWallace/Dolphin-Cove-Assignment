<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        *{
            box-sizing: border-box;
            padding: 0;
            margin: 0;
        }

        table{
            padding: 10px;
            border: 2px solid rgb(30, 30, 192);
            margin: auto;
        }

        tr th{
            padding: 4px 9px;
            border: 2px solid rgb(61, 188, 204);
        }

        td{
            padding: 12px;
        }

        h1{
            text-align: center;
        }
    </style>
    <title>Document</title>
</head>
<body>
    <h1>Tour Bookings</h1>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Pickup Time</th>
                <th>tourCompany</th>
                <th>Address</th>
                <th>Contact</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% bookings.forEach(booking => { %>
            <tr>
                <td><%=booking.fname  %> </td>
                <td><%=booking.lname  %> </td>
                <td><%=booking.pickup_time  %> </td>
                <td><%=booking.tour_company  %> </td>
                <td><%=booking.address %> </td>
                <td><%=booking.phone_number %> </td>
                <td>
                    <button><a href="tourBooking/edit/<%= booking.id %> ">Edit</a></button>
                    <button><a href="tourBooking/delete/<%= booking.id %>">Delete</a></button>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>